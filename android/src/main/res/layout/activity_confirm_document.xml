<!--        android:layout_marginBottom="27dp"-->
<!--        />-->

    <ImageButton
        android:id="@+id/idenfy_button_sample_app_view_begin_identification"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="27dp"
        android:background="@drawable/border_bold_2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/idenfy_button_sample_app_view_begin_identification"
        app:layout_constraintEnd_toEndOf="@+id/idenfy_button_sample_app_view_begin_identification"
        app:layout_constraintTop_toTopOf="@+id/idenfy_button_sample_app_view_begin_identification"
        app:layout_constraintBottom_toBottomOf="@+id/idenfy_button_sample_app_view_begin_identification"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:text="Continue"
        android:fontFamily="@font/sfpro_bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
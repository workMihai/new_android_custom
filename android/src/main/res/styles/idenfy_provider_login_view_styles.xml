<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="idenfyProviderLoginViewTitleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/idenfyProviderLoginViewTitleTextColor</item>
        <item name="android:textSize">
            @dimen/idenfy_dimen_country_selection_view_information_title_text_size
        </item>
    </style>

    <style name="idenfyProviderLoginViewDescriptionStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/idenfyProviderLoginViewDescriptionTextColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="idenfyProviderLoginViewUsernameAndPasswordEditTextTopHintStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/idenfyProviderLoginViewUsernameAndPasswordEditTextTopHintTitleColor</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="idenfyProviderLoginViewButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">
            @color/idenfyProviderLoginViewContinueButtonTextColor
        </item>
        <item name="android:textSize">12sp</item>
